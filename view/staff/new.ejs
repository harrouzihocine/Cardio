<button
  id="item2"
  type="button"
  class="btn btn-outline-success"
  data-bs-toggle="modal"
  data-bs-target="#newstaff"
><i class="bi bi-person-plus-fill me-2"></i>Ajouter</button>

<!-- Modal -->
<div
  class="modal fade"
  id="newstaff"
   data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">
          Ajouter Personnel
        </h5>

        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <form
        class="row g-3"
        action="/staffs"
        id="personal"
        method="POST"
       autocomplete="off"
      >
    
    <div class="form-floating">
     
      <input
        id="staffLastName"
        name="staff[lastname]"
        type="text"
        class="form-control"
        autofocus
        required
      />
      <label for="staffLastName" class="form-label">Lastname</label>
    </div>

        <div class="form-floating">
          
          <input
            id="staffFirstName"
            name="staff[firstname]"
            type="text"
            class="form-control"
             />
          <label for="staffFirstName" class="form-label">Firstname</label>
       
        </div>
        <div class="form-floating">
         
          <select
            id="staffFonction"
            name="staff[fonction]"
            class="form-select"
            required
          >
            <option selected disabled>Fonction</option>
            <option class="option" value="Medecin">Medecin</option>
            <option class="option" value="technicien">Technicien</option>
          </select>
          <label for="staffGender" class="form-label">Fonction</label>
        </div>
        <div class="form-floating">

        <div class="form-check form-switch ms-2">
          <input class="form-check-input" type="checkbox" name="staff[externe]" value="externe" role="switch" id="externe">
          <label class="form-check-label" for="externe">Externe</label>
        </div>
      </div>

        
        <div class="form-floating">
         
          <input
            type="text"
            class="form-control"
            id="stafemail"
            name="staff[email]"
            
          />
          <label for="staffemail" class="form-label">Email</label>
        </div>
        <div class="form-floating">
         
          <input
            type="text"
            class="form-control"
            id="staffPhone"
            name="staff[phone]"
          />
          <label for="staffPhone" class="form-label">Phone</label>
        </div>
       
        <div class="modal-footer mt-4">
          <button
          type="button"
          class="btn btn-outline-danger"
          data-bs-dismiss="modal"
          >
          Annuler
        </button>
        <button class="btn btn-outline-success">Ajouter</button>
        </div>
      </form>
      </div>
    </div>
  </div>
</div>
